    Address line 1: <%= f.text_field :address_one, class: 'form-control' %>
  </div>

  <div class="form-group">
    Address line 2: <%= f.text_field :address_two, class: 'form-control' %>
  </div>

  <div class="form-group">
    City: <%= f.text_field :city, class: 'form-control' %>
  </div>

  <div class="form-group">
    Zip: <%= f.text_field :zip, class: 'form-control' %>
  </div>

  <div class="form-group">
    Phone: <%= f.text_field :phone, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-default'  %>
  </div>
<% end %>
